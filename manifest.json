{
  "manifest_version": 2,

  "name": "Online Trail",
  "description": "This extension shows the user more information about what data is being tracked about them.",
  "version": "1.0",

  "permissions": [
		"storage",
		"cookies",
		"tabs",
		"http://*/*",
    "https://*/*"
  ],

	"background": {
    "scripts": ["background.js"],
    "persistent": false
  },

	"content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script.js"],
			"run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "prototype.html"
  },

	"icons": { 
		"16": "icon.png",
		"48": "icon48.png"
	}

}
